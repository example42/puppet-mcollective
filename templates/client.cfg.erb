# File Managed by Puppet

topicprefix = /topic/
main_collective = mcollective
collectives = mcollective
libdir = <%= scope.lookupvar('mcollective::data_dir') %>
# logfile = <%= scope.lookupvar('mcollective::log_file') %>
logger_type = console
loglevel = warn
daemonize = 1
direct_addressing = 1

# Plugins
securityprovider = psk
plugin.psk = <%= scope.lookupvar('mcollective::psk') %>

connector = stomp
plugin.stomp.host = <%= scope.lookupvar('mcollective::stomp_host') %>
plugin.stomp.port = <%= scope.lookupvar('mcollective::stomp_port') %>
plugin.stomp.user = <%= scope.lookupvar('mcollective::stomp_admin') %>
plugin.stomp.password = <%= scope.lookupvar('mcollective::stomp_admin_password') %>

# Facts
factsource = yaml
plugin.yaml = /etc/mcollective/facts.yaml

